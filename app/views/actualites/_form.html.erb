      <div class="form-container">
          <%= form_with(model: actualite, local: true, html: { multipart: true, class: "actualite-form" }) do |form| %>
              <% if actualite.errors.any? %>
                  <div class="error-messages">
                      <h2><%= pluralize(actualite.errors.count, "erreur") %> ont empêché la sauvegarde :</h2>
                      <ul>
                          <% actualite.errors.each do |error| %>
                              <li><%= error.full_message %></li>
                          <% end %>
                      </ul>
                  </div>
              <% end %>
      
              <div class="form-group">
                  <%= form.label :titre, class: "form-label" %>
                  <%= form.text_field :titre, class: "form-input" %>
              </div>
      
              <div class="form-group">
                  <%= form.label :contenu, class: "form-label" %>
                  <%= form.text_area :contenu, class: "form-input form-textarea" %>
              </div>
      
              <div class="form-group">
                  <%= form.label :image, class: "form-label" %>
                  <%= form.file_field :image, class: "form-input" %>
                  <% if actualite.image.attached? %>
                      <%= image_tag actualite.image, class: "form-image-preview" %>
                  <% end %>
              </div>
      
              <div class="form-actions">
                  <%= form.submit actualite.persisted? ? "Mettre à jour" : "Créer l'actualité", 
                                  class: "button gold-round-button" %>
                                  
                  <%= link_to "Retour", actualite.persisted? ? actualite_path(actualite) : actualites_path, 
                              class: "button default-round-button" %>
              </div>
          <% end %>
      </div>