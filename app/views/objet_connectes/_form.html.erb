<%= form_with(model: objet_connecte, local: true, html: { multipart: true }) do |form| %>
  <% if objet_connecte.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(objet_connecte.errors.count, "erreur") %> empÃªchent l'enregistrement :</h2>
      <ul>
        <% objet_connecte.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :titre %>
    <%= form.text_field :titre, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit 'Enregistrer', class: 'btn-submit' %>

  <style>
    .form-group {
      margin-bottom: 1rem;
    }

    .form-errors {
      background: #ffe0e0;
      padding: 1rem;
      border: 1px solid #ff9999;
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    .btn-submit {
      padding: 0.5rem 1.5rem;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }

    .btn-submit:hover {
      background-color: #45a049;
    }
  </style>
<% end %>
