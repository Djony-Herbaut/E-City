<div class="form-container">
  <div class="form-box">
    <h2 class="form-title">Se connecter</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
      <div class="flex-column">
        <%= f.label :email %>
      </div>
      <div class="inputForm">
        <!-- svg -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Saisissez votre mail", class: "input" %>
      </div>

      <div class="flex-column">
        <%= f.label :password %>
      </div>
      <div class="inputForm">
        <!-- svg -->
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Saisissez votre mot de passe", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex-row">
          <div class="remember-me">
            <%= f.label :remember_me %>
            <%= f.check_box :remember_me %>
          </div>
        </div>
      <% end %>

      <%= f.submit "Sign In", class: "button-submit" %>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
