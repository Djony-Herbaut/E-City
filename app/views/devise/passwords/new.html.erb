<div class="form-container">
  <div class="form-box">
    <h2 class="form-title">Mot de passe oublié ?</h2>


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex-column">
          <%= f.label :email %><br />
        </div>
        <div class="inputForm">
          <%= f.email_field :email, autofocus: true, placeholder:"Saisissez votre mail", autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Envoyez les instructions de réinitialisation", class: "button-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
